        <main class="content">
             <!-- This is where unique content will be inserted -->
             <%- include(content) %>
        </main>
        <footer class="footer">
            <span>© 2024 “Small Blog”</span>
            <form action="/users/logout" method="POST">
                <button class="registerbtn" type="submit">Log out of your account</button>
            </form>
        </footer>
